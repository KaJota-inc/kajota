{
  "expo": {
    "name": "jota-app",
    "slug": "jota-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/shared/assets/images/png/jota_logo.png",
    "userInterfaceStyle": "light",
    "scheme": "jotaapp",
    "splash": {
      "image": "./src/shared/assets/images/png/jota_splash_screen.png",
      "resizeMode": "cover",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.jotaapp.kajota"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/shared/assets/images/png/jota_splash_screen.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./src/shared/assets/images/png/jota_logo.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow kaJOTA to use your location."
        }
      ]
    ]
  }
}
